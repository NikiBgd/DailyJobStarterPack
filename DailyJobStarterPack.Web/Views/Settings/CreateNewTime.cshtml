@using DailyJobStarterPack.DataBaseObjects
@using DailyJob.Helpers
@using DailyJobStarterPack.Web.ViewModels.Security

@{
    var shouldOpenPop = ViewData.ContainsKey("isSuccessful");
    var isSuccessful = false;
    if (shouldOpenPop)
    {
        isSuccessful = (bool)ViewData["isSuccessful"];
    }
}
<style>


</style>
<div class="row" style="margin-bottom: 50px; margin-top: 50px;">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Novo granicno vreme</h4>
                <div class="row">
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("CreateNewTime", "Settings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <fieldset>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="TimeName">Naziv granicnog vremena</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-user">
                                        </i>
                                    </div>
                                    <input id="TimeName" name="TimeName" type="text" class="form-control input-md" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="TimeDescription">Opis granicnog vremena</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-user">
                                        </i>
                                    </div>
                                    <input id="TimeDescription" name="TimeDescription" type="text" class="form-control input-md" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="Value">Vrednost</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-birthday-cake">
                                        </i>
                                    </div>
                                    <input id="Value" name="Value" type="text" class="form-control input-md" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label"></label>
                            <div class="col-md-4" style="text-align: right">
                                <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-thumbs-up"></span> Dodaj novo granicno vreme</button>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

<!-- POP UPUS -->
@if (shouldOpenPop)
{
    <div id="popup1" class="overlay">
        <div class="popup">
            <h2>Dodavanje novog granicnog vremena</h2>
            <a class="close" href="@Url.Action("Times", "Settings")">&times;</a>
            <div class="content">
                @if (isSuccessful)
                {
                    <span>Uspesno ste dodali novo granicno vreme. Sva potencijalna osnivanja mozete videti u listi vremenskih ogranicenja.</span>
                }
                else
                {
                    <span>Doslo je do greske prilikom dodavanja novog vremenskog ogranicenja.</span>
                }
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Times", "Settings")" data-dismiss="modal" class="btn secondary">U redu</a>
            </div>
        </div>
    </div>
}
